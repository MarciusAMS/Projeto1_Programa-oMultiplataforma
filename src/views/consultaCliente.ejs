<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Clientes</title>
</head>
<body>
    <h1>Lista de Clientes</h1>
    <table border="1">
        <tr>
            <th>ID</th>
            <th>Nome</th>
            <th>Endereço</th>
            <th>Telefone</th>
            <th>Email</th>
            <th>Ações</th>
        </tr>
        <% clientes.forEach(cliente => { %>
            <tr>
                <td><%= cliente.id %></td>
                <td><%= cliente.nome %></td>
                <td><%= cliente.endereco %></td>
                <td><%= cliente.telefone %></td>
                <td><%= cliente.email %></td>
                <td>
                    <a href="/clientes/<%= cliente.id %>">Editar</a> |
                    <form action="/clientes/<%= cliente.id %>?_method=DELETE" method="POST" style="display:inline;">
                        <button type="submit">Excluir</button>
                    </form>
                </td>
            </tr>
        <% }); %>
    </table>
    <br>
    <a href="/clientes/novo">Adicionar Cliente</a>
</body>
</html>

<head>
    <meta charset="UTF-8">
    <title>Adicionar Venda</title>
    <link rel="stylesheet" href="/css/vendas/adicionarVendas.css">
</head>
<body>
    <div class="container">
        <h1>Adicionar Nova Venda</h1>
        <form action="/api/vendas/novo" method="POST">
            <label for="cliente_id">ID do Cliente:</label>
            <input type="number" id="cliente_id" name="cliente_id" required>

            <label for="data_venda">Data da Venda:</label>
            <input type="date" id="data_venda" name="data_venda" required>

            <label for="valor_total">Valor Total:</label>
            <input type="number" step="0.01" id="valor_total" name="valor_total" required>

            <input type="submit" value="Salvar">
        </form>
        <a href="/api/vendas">Voltar</a>
    </div>
</body>
